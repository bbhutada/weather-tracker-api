{
  "name": "weather-tracker-api",
  "version": "1.0.0",
  "description": "API to track rainfall",
  "main": "dist/index.js",
  "scripts": {
    "build": "rm -rf ./dist && tsc",
    "start:dev": "nodemon src/index.ts",
    "start": "npm run build && node dist/index.js",
    "migration:generate": "ts-node ./node_modules/typeorm/cli.js migration:generate -d ./src/Database.ts",
    "migrate:up": "ts-node ./node_modules/typeorm/cli.js migration:run -d ./src/Database.ts",
    "migrate:down": "ts-node ./node_modules/typeorm/cli.js migration:revert -d ./src/Database.ts",
    "lint": "eslint",
    "format": "prettier --write 'src/**/*.{ts,js,json,md}'"
  },
  "dependencies": {
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "class-validator-jsonschema": "^5.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "pg": "^8.13.1",
    "reflect-metadata": "^0.2.2",
    "routing-controllers": "^0.10.4",
    "routing-controllers-openapi": "^4.0.0",
    "swagger-ui-express": "^5.0.1",
    "typedi": "^0.10.0",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.2",
    "@types/swagger-ui-express": "^4.1.7",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.13.0",
    "husky": "^9.1.7",
    "nodemon": "^3.1.9",
    "prettier": "3.4.2",
    "ts-node": "^10.9.2",
    "typeorm-cli": "^1.0.7",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.1"
  },
  "author": "",
  "license": "ISC"
}
